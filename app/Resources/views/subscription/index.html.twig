{% extends 'base.html.twig' %}

{% block title %}Subscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/subscription/index.css') }}">
{% endblock %}

{% block body %}
    <h2 class="center">Why you need a subscription</h2>
    <p class="center">Thanks to subscriptions, you can buy a permanent discount on <b>all</b> products</p>

    <div class="row justify-content-md-center">
        <div class="col-md-8 align-self-center">
            {% for plan in all_plans %}
                <div class="card subscription">
                    <div class="card-body">
                        {% if plan.id == 'bronze' %}
                            <p class="card-text">Bronze subscription will give you a discount on all products in 10%</p>
                        {% elseif plan.id == 'silver' %}
                            <p class="card-text">Silver subscription will give you a discount on all products in 15%</p>
                        {% elseif plan.id == 'gold'%}
                            <p class="card-text">Gold subscription will give you a discount on all products in 20%</p>
                        {% else %}
                            <p class="card-text">Unidentified subscription</p>
                        {% endif %}
                    </div>

                    {% if plan.id == 'bronze' %}
                        <img class="subscription-image card-img" src="http://img.amur.info/res/news/123170/660x440/90e4fef53ea4fae9ac0e4e5c2278e285.jpg" alt="Card image">
                    {% elseif plan.id == 'silver' %}
                        <img class="subscription-image card-img" src="data:image/jpeg;base64," alt="Card image">
                    {% elseif plan.id == 'gold'%}
                        <img class="subscription-image card-img" src="https://yakapitalist.ru/wp-content/uploads/2018/09/Gde-deshevle-kupit-zolotoy-slitok-1.png" alt="Card image">
                    {% else %}
                        <img class="subscription-image card-img" src="http://img.amur.info/res/news/123170/660x440/90e4fef53ea4fae9ac0e4e5c2278e285.jpg" alt="Card image">
                    {% endif %}
                    <div class="card-body">
                        <p class="card-text">
                            {% if not app.user.getSubscription %}
                                <form class="basket_payment" method="post">
                                    <input type="hidden" value={{ plan.id }} name="plan">
                                    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                                            data-key="{{ stripe_public_key }}"
                                            data-description="Access for a year"
                                            data-amount="{{ plan.amount }}"
                                            data-email="{{ app.user.email }}"
                                            data-locale="auto"></script>
                                </form>
                            {% elseif app.user.getSubscription == plan.id %}
                                <form method="POST" action="{{ path('delete_subscription') }}">
                                    <input type="hidden" value="{{ plan.id }}" name="plan">
                                    <input type="submit" class="delete btn btn-warning" value="Unsubscribe">
                                </form>
                            {% endif %}
                        </p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}