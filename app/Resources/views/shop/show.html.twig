{% extends 'base.html.twig' %}

{% block crumbs %}
    <ol class = "breadcrumb">
        <li><a href = "{{ path('homepage') }}">Home</a></li>
        <li class = "active">{{ shop.name }}</li>
    </ol>
{% endblock %}

{% block body %}
    <main role="main">

        <div class="jumbotron">
            <div class="container">
                <h1 class="display-3">{{ shop.name }}</h1>
                <p>{{ shop.description }}</p>
            </div>
        </div>


        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="http://kaifolog.ru/uploads/posts/2014-05/1400477776_002.jpg" alt="Первый слайд">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="http://kaifolog.ru/uploads/posts/2014-05/1400477776_002.jpg" alt="Второй слайд">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="http://kaifolog.ru/uploads/posts/2014-05/1400477776_002.jpg" alt="Третий слайд">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

            <div class="list-group">
                {% for category in shop.categories %}
                    <div class="col-md-12">
                        <a href="{{ path('show_by_category', {id: category.id}) }}" class="list-group-item list-group-item-action">{{ category.name }}</a>
                    </div>
                {% endfor %}
            </div>

            <hr>
        </div>

    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}