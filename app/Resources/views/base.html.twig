        </button>

        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="nav navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('homepage') }}">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('feedback') }}">Feedback</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('product_show') }}">Products</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('category_show') }}">Categories</a>
                </li>

{#                <li class="nav-item dropdown">#}
