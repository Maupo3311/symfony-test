{#                        <a class="dropdown-item" href="#">Something else here</a>#}
{#                    </div>#}
{#                </li>#}
            </ul>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
{#                        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |#}
                        <a class="nav-link" href="{{ path('fos_user_security_logout') }}">
                            {{ app.user.username }}{{ '|logout'|trans({}, 'FOSUserBundle') }}
                        </a>
                    {% else %}
                        <a class="nav-link" href="{{ path('fos_user_security_login') }}">
                            {{ 'login'|trans({}, 'FOSUserBundle') }}
                        </a>
                    {% endif %}
{#                    <a class="nav-link" href="{{ path('fos_user_security_login') }}">Login</a>#}
                </li>
            </ul>
{#            <div class="form-inline my-2 my-lg-0">#}
{#                Input#}
{#            </div>#}
        </div>
    </nav>
    <div class="container">
        <br><br><br>
        {% for flash in app.session.flashbag.get('success') %}
            <div class="alert alert-success">{{ flash }}</div>
        {% endfor %}

        {% block body %}{% endblock %}

        {% block content %} {% endblock %}
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    {% block javascripts %}{% endblock %}
